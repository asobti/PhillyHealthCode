<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/aboutVitaminText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/vitaminLogo"
            android:text="VitaminME"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <ImageView
            android:id="@+id/vitaminLogo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_vm_2" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/aboutYummlyLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutYummlyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/yummly_official" />

    <TextView
        android:id="@+id/aboutYummlyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Recipe Search Powered By:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/aboutYummlyLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aboutYummlyLogo"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:layout_marginTop="10dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="http://www.yummly.com/recipes"
        android:textSize="16sp" />

</RelativeLayout>